{% extends 'base.html.twig' %}

{% block title %}Delivery Method | Read{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-6">
                            <h1>Welcome</h1>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Consequuntur culpa
                                delectus
                                eos, minus nemo neque obcaecati placeat quam quisquam ullam?
                            </p>
                        </div>
                        <div class="col-6">
                            <div class="form-group row">
                                <div class="col-6">
                                    <span class="label-text col-form-label">Delivery Method Name</span>
                                    <p>{{ deliveryMethodModel.deliveryMethodName }}</p>
                                </div>
                                <div class="col-6">
                                    <span class="label-text col-form-label">Delivery Method Logo</span>
                                    <p><img src="https://via.placeholder.com/50x50" alt="" class="rounded-circle"></p>
                                </div>
                                <div class="col-6">
                                    <span class="label-text col-form-label">Delivery Method Type</span>
                                    <p>{{ deliveryMethodModel.deliveryMethodTypeName }}</p>
                                </div>
                                <div class="col-6">
                                    <span class="label-text col-form-label">Delivery Method Cost</span>
                                    <p>{{ deliveryMethodModel.deliveryMethodCost }}</p>
                                </div>
                                <div class="col-6">
                                    <span class="label-text col-form-label">Delivery Method Receive Money</span>
                                    <p>
                                        <span class="{{ (deliveryMethodModel.deliveryMethodReceiveMoney) ? 'fa fa-check text-green' : 'fa fa-times text-red' }}"></span>
                                    </p>
                                </div>
                                <div class="col-12">
                                    <span class="label-text col-form-label">Delivery Method Description</span>
                                    <p>{{ deliveryMethodModel.deliveryMethodDescription }}</p>
                                </div>
                                <div class="col-12">
                                    <span class="label-text col-form-label">Delivery Method Content</span>
                                    <p>{{ deliveryMethodModel.deliveryMethodContent }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="row">
                {% for selectedSize in selectedSizes %}
                    <div class="col-3">
                        <div class="panel">
                            <div class="panel-heading">
                                <strong>Allowed Sizes</strong>
                            </div>
                            <div class="panel-content">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group row">
                                            <div class="col-md-12 text-center">
                                                <h3>{{ selectedSize.sizeName }}</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="col-12">
            <div class="panel">
                <div class="panel-heading">
                    <strong>
                        Delivery Persons
                    </strong>
                </div>
                <div class="panel-content">
                    <div class="form-group row">
                        <div class="col-4"></div>
                        <div class="col-md-4">
                            <input type="text" placeholder="Search" name="text"
                                   class="form-control">
                        </div>
                        <div class="col-4"></div>
                    </div>
                    <!---->
                    <div class="records--list">
                        <table id="countriesList">
                            <thead>
                            <tr>
                                <th>Global Token</th>
                                <th>Name</th>
                                <th>Mobile</th>
                                <th>Status</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for deliveryPerson in deliveryPersons %}
                                <tr>
                                    <td>{{ deliveryPerson.deliveryPersonId }}</td>
                                    <td>{{ deliveryPerson.deliveryPersonFirstName }} {{ deliveryPerson.deliveryPersonLastName }}</td>
                                    <td>
                                        <a href="tel:{{ deliveryPerson.deliveryPersonMobile }}"
                                           class="btn-link">{{ deliveryPerson.deliveryPersonMobile }}</a>
                                    </td>

                                    <td>
                                        <span class="label rounded"
                                              style="background-color: {{ deliveryPerson.deliveryPersonStatus.deliveryPersonStatusColor }}">
                                            {{ deliveryPerson.deliveryPersonStatus.deliveryPersonStatusName }}
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        {% for day in weekDays %}
            <div class="col-6">
                <div class="panel">
                    <div class="panel-heading">
                        <strong>{{ day.weekDayName }}</strong></div>
                    <div class="panel-content">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th scope="col">From time</th>
                                    <th scope="col">To time</th>
                                    <th scope="col">Capacity</th>
                                    <th scope="col">Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for queue in day.weekDayQueues %}
                                    <tr>
                                        <td>{{ queue.queueFrom }}</td>
                                        <td>{{ queue.queueTo }}</td>
                                        <td>{{ queue.queueCapacity }}</td>
                                        <td>
                                            <span class="label rounded"
                                                  style="background-color: {{ queue.queueStatus.queueStatusName }}">
                                                {{ queue.queueStatus.queueStatusName }}
                                            </span>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
