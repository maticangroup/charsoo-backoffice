{% extends 'base.html.twig' %}

{% block title %}Guarantee | Create{% endblock %}

{% block body %}
    <div class="row">
        {% if canCreate %}
            <div class="col-12">
                <div class="panel">
                    <div class="panel-content">
                        <div class="row">
                            <div class="col-10">
                                <h3>Want to add a new color?</h3>
                                <p>
                                    Lorem ipsum dolor sit amet, consectetur adipisicing elit. Asperiores facilis,
                                    laudantium odit quibusdam quis vel?
                                </p>
                            </div>
                            <div class="col-2">
                                <form class="row"
                                      action="{{ path('repository_guarantee_repository_guarantee_create') }}"
                                      method="post">
                                    <div class="col-12">
                                        <input type="text" placeholder="Guarantee name"
                                               value="{{ guaranteeModel.guaranteeName }}"
                                               name="guaranteeName"
                                               class="form-control mb-3">
                                        <input type="text" placeholder="Guarantee Price"
                                               value="{{ guaranteeModel.guaranteePrice }}"
                                               name="guaranteePrice"
                                               class="form-control mb-3">
                                        <label class="custom-file mb-3">
                                            <select name="guaranteeProviderID" class="form-control">
                                                {% for guaranteeProvider in guaranteeProviders %}
                                                    <option value="{{ guaranteeProvider.guaranteeProviderID }}" {{ (guaranteeModel.guaranteeProviderId == guaranteeProvider.guaranteeProviderID) ? 'selected' : '' }}>{{ guaranteeProvider.guaranteeProviderName }}</option>
                                                {% endfor %}
                                            </select>
                                        </label>
                                        <label class="custom-file mb-3">
                                            <select name="guaranteeDurationID" class="form-control">
                                                {% for guaranteeDuration in guaranteeDurations %}
                                                    <option value="{{ guaranteeDuration.guaranteeDurationID }}" {{ (guaranteeDuration.guaranteeDurationID == guaranteeModel.guaranteeDurationId) ? 'selected' : '' }}>{{ guaranteeDuration.guaranteeDurationName }}</option>
                                                {% endfor %}
                                            </select>
                                        </label>
                                        <button type="submit"
                                                class="btn btn-block rounded btn-dark fa fa-save"></button>
                                    </div>
                                </form>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        {% endif %}

        {% if canSeeAll %}
            <div class="col-12">
                <div class="panel">
                    <div class="panel-content">
                        <div class="form-group row">
                            <div class="col-4"></div>
                            <div class="col-md-4">
                                <input type="text" placeholder="Search" name="text"
                                       class="form-control">
                            </div>
                            <div class="col-4"></div>
                        </div>
                        <!-- Records List Start -->
                        <div class="records--list">
                            <table id="usersRoleList">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Provider</th>
                                    <th>Duration</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for guarantee in guarantees %}
                                    <tr>
                                        <td>
                                            {{ guarantee.guaranteeID }}
                                        </td>
                                        <td>
                                            {{ guarantee.guaranteeName }}
                                        </td>
                                        <td>
                                            {{ guarantee.guaranteePrice }}
                                        </td>
                                        <td>
                                            {{ guarantee.guaranteeProviderName }}
                                        </td>
                                        <td>
                                            {{ guarantee.guaranteeDurationName }}
                                        </td>
                                        <td>
                                        <span class="label rounded"
                                              style="background-color: {{ guarantee.guaranteeStatus.guaranteeStatusColor }} !important;">
                                            {{ guarantee.guaranteeStatus.guaranteeStatusName }}
                                        </span>
                                        </td>
                                        <td>
                                            {% if canEdit %}
                                                <a href="{{ path('repository_guarantee_repository_guarantee_edit' , {id:guarantee.guaranteeID}) }}"
                                                   class="fa fa-edit"></a>
                                            {% endif %}
                                            {% if canChangeStatus %}
                                                <a href="{{ path('repository_guarantee_repository_guarantee_status' , {guarantee_id:guarantee.guaranteeID , machine_name:guarantee.guaranteeStatus.guaranteeStatusMachineName}) }}"
                                                   class="{{ (guarantee.guaranteeStatus.guaranteeStatusMachineName == 'active') ? 'fa fa-ban text-red' : 'fa fa-play text-green' }}"></a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- Records List End -->
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
