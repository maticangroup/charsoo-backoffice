{% extends 'base.html.twig' %}

{% block title %}Color | Create{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-10">
                            <h3>Want to add a new color?</h3>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Asperiores facilis,
                                laudantium odit quibusdam quis vel?
                            </p>
                        </div>
                        <div class="col-2">
                            <form class="row" action="{{ path('repository_item_color_repository_item_color_create') }}"
                                  method="post">
                                <div class="col-12">
                                    <input type="text" placeholder="Color name"
                                           name="itemColorName"
                                           class="form-control mb-3">
                                    <input type="color" placeholder="Color name"
                                           name="itemColorHex"
                                           class="form-control mb-3">
                                    <button type="submit" class="btn btn-block rounded btn-dark fa fa-save"></button>
                                </div>
                            </form>
                        </div>

                    </div>

                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="panel">
                <div class="panel-content">
                    <div class="form-group row">
                        <div class="col-4"></div>
                        <div class="col-md-4">
                            <input type="text" placeholder="Search" name="text"
                                   class="form-control">
                        </div>
                        <div class="col-4"></div>
                    </div>
                    <!-- Records List Start -->
                    <div class="records--list">
                        <table id="usersRoleList">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Color Hex</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for color in colors %}
                                <tr>
                                    <td>
                                        {{ color.itemColorID }}
                                    </td>
                                    <td>
                                        {{ color.itemColorName }}
                                    </td>
                                    <td>
                                        <span class="label rounded"
                                              style="background-color: {{ color.itemColorHex }} !important;">
                                              
                                        </span>
                                    </td>
                                    <td>
                                        <span class="label rounded"
                                              style="background-color: {{ color.itemColorStatus.statusColor }} !important;">
                                            {{ color.itemColorStatus.name }}
                                        </span>
                                    </td>
                                    <td>
                                        <a href="{{ path('repository_item_color_repository_item_color_edit' , {id:color.itemColorID}) }}"
                                           class="fa fa-edit"></a>
                                        <a href="{{ path('repository_item_color_repository_item_color_status' , {id:color.itemColorID , machine_name:color.itemColorStatus.machineName}) }}"
                                           class="{{ (color.itemColorStatus.machineName == 'deactive')? 'fa fa-play text-green' : 'fa fa-ban text-red' }}"></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- Records List End -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
