            <div class="panel">
                <div class="invoice">
                    <div class="panel-heading">
                        <p><strong>Order Serial : </strong>{{ orderModel.orderSerial }}</p>

                        <p><strong>Create Date : </strong>{{ orderModel.orderCreateDate }}</p>

                        <p><strong>Order Status : </strong>{{ orderModel.orderStatus.orderStatusName }}</p>
                        <span class="label rounded">

                        </span>
                    </div>
                    <div class="invoice--header">
                        <div class="invoice--logo">
                            <img src="{{ asset('assets/images/matican_images/arad_mobile_logo.png') }}" width="200px"
                                 alt="">
                        </div>

                        <div class="invoice--address">
                            <h5 class="h5">Arad Mobile</h5>
                            <p>
                                Arad Mobile Address comes here, Lorem ipsum dolor sit amet.
                            </p>
                        </div>
                    </div>
                    <div class="invoice--billing">
