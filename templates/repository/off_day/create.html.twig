{% extends 'base.html.twig' %}

{% block title %}Off Days | Create{% endblock %}

{% block body %}
    <div class="row">
        {% if canCreate %}
            <div class="col-12">
                <div class="panel">
                    <div class="panel-content">
                        <div class="row">
                            <div class="col-10">
                                <h3>Want to add a new user?</h3>
                                <p>
                                    Lorem ipsum dolor sit amet, consectetur adipisicing elit. Adipisci aspernatur
                                    culpa doloribus laborum necessitatibus rem temporibus. Beatae ipsa officiis
                                    quam.
                                </p>
                            </div>
                            <div class="col-2">
                                <form class="row" action="{{ path('repository_off_day_repository_off_day_create') }}"
                                      method="post">
                                    <div class="col-12">
                                        {#<span class="label-text col-md-12 col-form-label ">Date</span>#}
                                        <input type="text" id="date-picker" name="offDayDate"
                                               class="form-control" placeholder="Date"
                                               value="{{ offDayModel.offDayDate }}" required/>
                                        <span id="span-date-picker"></span>
                                    </div>
                                    <div class="col-12">
                                        <span class="label-text col-md-12 col-form-label "></span>
                                            <textarea placeholder="Reason" name="offDayReason"
                                                      class="form-control mb-3" required>{{ offDayModel.offDayReason }}</textarea>
                                    </div>
                                    <div class="col-12">
                                        <button type="submit"
                                                class="btn btn-block rounded btn-dark fa fa-save"></button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        {% if canSeeAll %}
            <div class="col-12">
                <div class="panel">
                    <div class="panel-content">
                        <div class="form-group row">
                            <div class="col-4"></div>
                            <div class="col-md-4">
                                <input type="text" placeholder="Search" name="text"
                                       class="form-control">
                            </div>
                            <div class="col-4"></div>
                        </div>
                        <!-- Records List Start -->
                        <div class="records--list">
                            <table id="usersRoleList">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Date</th>
                                    <th>Reason</th>
                                    <th>Created At</th>
                                    <th>By</th>
                                    {% if canRemove %}
                                        <th>Action</th>
                                    {% endif %}
                                </tr>
                                </thead>
                                <tbody>
                                {% for offDay in offDays %}
                                    <tr>
                                        <td>
                                            {{ offDay.offDayID }}
                                        </td>
                                        <td>
                                            {{ offDay.offDayYear }}/{{ offDay.offDayMonth }}/{{ offDay.offDayDay }}
                                        </td>
                                        <td>
                                            {{ offDay.offDayReason }}
                                        </td>
                                        <td>
                                            {{ offDay.offDayCreateDate }}
                                        </td>
                                        <td>
                                            {{ offDay.offDayCreatePerson }}
                                        </td>
                                        {% if canRemove %}
                                            <td>
                                                <a href="{{ path('repository_off_day_repository_off_day_remove' , {id:offDay.offDayID}) }}"
                                                   class="fa fa-trash"></a>
                                            </td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- Records List End -->
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
