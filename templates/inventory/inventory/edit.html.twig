{% extends 'base.html.twig' %}

{% block title %}Inventory | Edit{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/map-sdk/dist/css/s.map.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/map-sdk/dist/css/fa/style.css') }}">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-12">
                            <h3>Want to add a new user?</h3>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Adipisci aspernatur
                                culpa doloribus laborum necessitatibus rem temporibus. Beatae ipsa officiis
                                quam.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="panel">
                <div class="panel-content">
                    <form class="row" action="{{ path('inventory_inventory_edit' , {id:inventoryModel.inventoryId}) }}"
                          method="post">
                        <div class="col-3">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Inventory Name</span>

                                <div class="col-md-12">
                                    <input type="text" value="{{ inventoryModel.inventoryName }}"
                                           name="inventoryName"
                                           placeholder="Inventory Name"
                                           class="form-control" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Inventory Keeper</span>

                                <div class="col-md-12">
                                    <select name="inventoryKeeperId" class="form-control">
                                        {% for person in persons %}
                                            <option value="{{ person.id }}" {{ (inventoryModel.inventoryKeeperId == person.id)?'selected':'' }}>{{ person.humanName }} {{ person.humanFamily }}
                                                | {{ person.mobile }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-3 mt-5">
                            <div class="form-group row">
                                <button type="submit" class="btn btn-block rounded btn-info fa fa-save"></button>
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        {% for phone in phones %}
                            <div class="col-3">
                                <div class="panel">
                                    <div class="panel-heading">
                                        <strong>Phone</strong>
                                    </div>
                                    <div class="panel-content">
                                        <form class="row"
                                              action="{{ path('inventory_inventory_remove_phone' , {inventory_id:inventoryModel.inventoryId , phone_id:phone.id}) }}"
                                              method="post">
                                            <div class="col-12">
                                                <div class="form-group row">
                                                    <div class="col-md-12 text-center">
                                                        <h4><a href="tel:{{ phone.phone }}" class="btn-link"
                                                               target="_blank">{{ phone.phone }}</a></h4>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <button type="submit"
                                                            class="btn btn-block rounded btn-danger fa fa-trash"></button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        <div class="col-3">
                            <div class="panel">
                                <div class="panel-heading">
                                    <strong>Add New Phone</strong>
                                </div>
                                <div class="panel-content">
                                    <form class="row"
                                          action="{{ path('inventory_inventory_add_phone' , {inventory_id:inventoryModel.inventoryId}) }}"
                                          method="post">
                                        <div class="col-12">
                                            <div class="form-group row">
                                                <span class="label-text col-md-12 col-form-label ">Telephone</span>
                                                <div class="col-md-12">
                                                    <input type="text" name="phone"
                                                           value=""
                                                           class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <button type="submit"
                                                        class="btn btn-block rounded btn-dark fa fa-save"></button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Address Panel-->
    <div class="row">
        <div class="col-12">
            <div class="panel">
                <div class="panel-heading">
                    Address
                </div>

                {% for location in locations %}
                    <div class="panel-content">
                        <form class="row"
                              action="{{ path('inventory_remove_address' , {location_id:location.locationId , inventory_id:inventoryModel.inventoryId}) }}"
                              method="post">
                            <input type="hidden" name="personId">
                            <div class="col-3">
                                <div class="form-group row">
                                    <div class="col-12">
                                        <span class="label-text col-form-label">Province</span>
                                        <h4>{{ location.provinceName }}</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group row">
                                    <div class="col-12">
                                        <span class="label-text col-form-label">City</span>
                                        <h4>{{ location.cityName }}</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group row">
                                    <div class="col-12">
                                        <span class="label-text col-form-label">Districts</span>
                                        <h4>{{ location.districtName }}</h4>
                                    </div>

                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <span class="label-text col-md-12 col-form-label ">Postal Code</span>
                                        <h4>{{ location.postalCode }}</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <span class="label-text col-md-12 col-form-label ">Address</span>
                                        <h4>{{ location.address }}</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-5">
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <span class="label-text col-md-12 col-form-label ">Person</span>
                                        <h4>{{ location.locationContactPersonFirstName }} {{ location.locationContactPersonLastName }}
                                            | {{ location.locationContactPersonMobile }}</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group row">
                                    <span class="label-text col-md-12 col-form-label ">Google Map</span>
                                    <div class="col-md-12">
                                        <img src="https://map.ir/static?width=700&height=400&markers=color:red|{{ location.locationLng }},{{ location.locationLat }}&zoom_level=16"
                                             alt="" width="100%">
                                    </div>
                                </div>
                            </div>
                            {#{% if canRemoveLocation %}#}
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-4"></div>
                                    <div class="col-4">
                                        <button type="submit" class="btn btn-block btn-danger rounded"><i
                                                    class="fa fa-trash"></i>
                                        </button>
                                    </div>
                                    <div class="col-4"></div>
                                </div>
                            </div>
                            {#{% endif %}#}

                            <div class="col-12">
                                <div class="form-group row">
                                    {% for message in app.flashes('s') %}
                                        <div class="col-md-12 mt-3 text-green"><span
                                                    class="fa fa-info text-green"></span> {{ message }}</div>
                                    {% endfor %}
                                    {% for message in app.flashes('f') %}
                                        <div class="col-md-12 mt-3 text-red"><span
                                                    class="fa fa-info text-red"></span> {{ message }}</div>
                                    {% endfor %}
                                </div>
                            </div>
                        </form>
                    </div>
                {% endfor %}
                {#add new address#}
                {% if locationCount == 0 %}
                    <div class="panel-content">
                        <form class="row"
                              action="{{ path('inventory_inventory_edit' , {id:inventoryModel.inventoryId}) }}"
                              method="post">
                            <div class="col-3">
                                <div class="form-group row">
                                    <div class="col-12">
                                        <span class="label-text col-form-label">Province</span>
                                        <input type="text" list="provinces" name="provinceName" class="form-control"
                                               placeholder="Province"
                                               value="{{ locationModel.provinceName }}">
                                        <datalist id="provinces">
                                            {% for province in provinces %}
                                            <option value="{{ province.provinceName }}">
                                                {% endfor %}
                                        </datalist>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group row">
                                    <div class="col-12">
                                        <span class="label-text col-form-label">City</span>
                                        <input type="text" list="cities" name="cityName" class="form-control"
                                               placeholder="City"
                                               value="{{ locationModel.cityName }}">
                                        <datalist id="cities">
                                            <option value="city 1">
                                            <option value="city 1">
                                            <option value="city 1">
                                        </datalist>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group row">
                                    <div class="col-12">
                                        <span class="label-text col-form-label">Districts</span>
                                        <input type="search" list="districts" name="districtName" class="form-control"
                                               placeholder="District" value="{{ locationModel.districtName }}">
                                        <datalist id="districts">
                                            <option value="1">
                                            <option value="2">
                                            <option value="3">
                                        </datalist>
                                    </div>

                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group row">
                                    <span class="label-text col-md-12 col-form-label ">Postal Code</span>

                                    <div class="col-md-12">
                                        <input type="text" name="postalCode"
                                               placeholder="254477788"
                                               class="form-control" value="{{ locationModel.postalCode }}">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group row">
                                    <span class="label-text col-md-12 col-form-label ">Address</span>
                                    <div class="col-md-12">
                                        <input type="text" name="address"
                                               placeholder="Address"
                                               class="form-control" value="{{ locationModel.address }}">
                                    </div>
                                </div>
                            </div>
                            <div class="col-5">
                                <div class="form-group row">
                                    <span class="label-text col-md-12 col-form-label ">Person</span>
                                    <div class="col-md-12">
                                        <select name="locationContactPersonId" class="form-control">
                                            {% for person in persons %}
                                                <option value="{{ person.id }}" {{ (person.id == inventoryModel.inventoryLocationContactPersonId) ? 'selected' : '' }}>
                                                    {{ person.humanName }} {{ person.humanFamily }}
                                                    | {{ person.mobile }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-7">
                                <div class="form-group row">
                                    <span class="label-text col-md-12 col-form-label ">Lat & Lng</span>
                                    <div class="col-md-12">
                                        <input type="text" name="locationGeoPoints"
                                               placeholder="Example : 35.68128, 51.42254"
                                               class="form-control" value="{{ locationModel.locationGeoPoints }}">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group row">
                                    <span class="label-text col-md-12 col-form-label ">Google Map</span>
                                    <div class="col-md-12">
                                        <div id="map" style="width: 100%;height: 320px;"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-4">
                                        <input type="hidden" name="owner_person"
                                               class="form-control">
                                    </div>
                                    <div class="col-4">
                                        <button type="submit" class="btn btn-block btn-dark rounded"><i
                                                    class="fa fa-save"></i></button>
                                    </div>
                                    <div class="col-4"></div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group row">
                                    {% for message in app.flashes('s') %}
                                        <div class="col-md-12 mt-3 text-green"><span
                                                    class="fa fa-info text-green"></span> {{ message }}</div>
                                    {% endfor %}
                                    {% for message in app.flashes('f') %}
                                        <div class="col-md-12 mt-3 text-red"><span
                                                    class="fa fa-info text-red"></span> {{ message }}</div>
                                    {% endfor %}
                                </div>
                            </div>
                        </form>
                    </div>
                {% endif %}
                {#add new address#}
            </div>
        </div>
    </div>
    <!--Address Panel-->
{% endblock %}

