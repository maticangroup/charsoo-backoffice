{% extends 'base.html.twig' %}

{% block title %}{{ 'repository.company.edit.tab.title' | trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/map-sdk/dist/css/s.map.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/map-sdk/dist/css/fa/style.css') }}">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-content">
                    <div class="row">

                        <div class="col-12">
                            <h1>{{ 'repository.company.edit.main.title' | trans }}</h1>
                            <p>{{ 'repository.company.edit.main.description' | trans }}</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        {% if canUpdate %}
            <div class="col-12">
                <div class="panel">
                    <div class="panel-content">
                        <form class="row"
                              action="{{ path('repository_company_repository_company_edit' , {id:company.companyID}) }}"
                              method="post">
                            <div class="col-3">
                                <div class="form-group row">
                                    <span class="label-text col-md-12 col-form-label ">{{ 'general.name.title' | trans }}</span>

                                    <div class="col-md-12">
                                        <input type="text" name="companyName"
                                               value="{{ company.companyName }}"
                                               class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group row">
                                    <span class="label-text col-md-12 col-form-label ">{{ 'general.national.code.title' | trans }}</span>
                                    <div class="col-md-12">
                                        <input type="text" name="companyNationalCode"
                                               value="{{ company.companyNationalCode }}"
                                               class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group row">
                                    <span class="label-text col-md-12 col-form-label ">{{ 'repository.company.create.form.input.title.register.code' | trans }}</span>

                                    <div class="col-md-12">
                                        <input type="text" name="companyRegistrationCode"
                                               value="{{ company.companyRegistrationCode }}"
                                               class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group row">
                                    <span class="label-text col-md-12 col-form-label ">{{ 'repository.company.create.form.input.title.economic.code' | trans }}</span>

                                    <div class="col-md-12">
                                        <input type="text" name="companyEconomicCode"
                                               value="{{ company.companyEconomicCode }}"
                                               class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group row">
                                    <span class="label-text col-md-12 col-form-label ">{{ 'general.email.title' | trans }}</span>

                                    <div class="col-md-12">
                                        <input type="text" name="companyEmail"
                                               value="{{ company.companyEmail }}"
                                               class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group row">
                                    <button type="submit" class="btn btn-block rounded btn-info mt-5"><i
                                                class="fa fa-save"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        {% endif %}


        {% for phone in phones %}
            <div class="col-3">
                <div class="panel">
                    <div class="panel-content">
                        <form class="row"
                              action="{{ path('repository_company_repository_company_remove_phone' , {company_id:company.companyID , phone_id:phone.id}) }}"
                              method="post">
                            <div class="col-12">
                                <div class="form-group row">
                                    <div class="col-md-12 text-center">
                                        <h4><a href="tel:{{ phone.phone }}" class="btn-link"
                                               target="_blank">{{ phone.phone }}</a></h4>
                                    </div>
                                </div>
                            </div>
                            {% if canRemovePhone %}
                                <div class="col-12">
                                    <div class="form-group">
                                        <button type="submit"
                                                class="btn btn-block rounded btn-danger fa fa-trash"></button>
                                    </div>
                                </div>
                            {% endif %}
                        </form>
                    </div>
                </div>
            </div>
        {% endfor %}

        {% if canAddPhone %}
            <div class="col-3">
                <div class="panel">
                    <div class="panel-heading">
                        <strong>{{ 'general.add.new.phone.title' | trans }}</strong>
                    </div>
                    <div class="panel-content">
                        <form class="row"
                              action="{{ path('repository_company_repository_company_add_phone' , {company_id:company.companyID}) }}"
                              method="post">
                            <div class="col-12">
                                <div class="form-group row">
                                    <span class="label-text col-md-12 col-form-label ">{{ 'general.phone.title' | trans }}</span>
                                    <div class="col-md-12">
                                        <input type="text" name="phone"
                                               value=""
                                               class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-block rounded btn-dark fa fa-save"></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="col-12">
            <div class="panel">
                <div class="panel-content">
                    {% if canAddEmployee %}
                        <form class="form-group row"
                              action="{{ path('repository_company_repository_company_add_employee' , {company_id:company.companyID}) }}"
                              method="post">
                            <div class="col-3"></div>
                            <div class="col-md-4">
                                <select name="employeeID"
                                        class="form-control">
                                    {% for person in persons %}
                                        <option value="{{ person.id }}">{{ person.humanName }} {{ person.humanFamily }}
                                            | {{ person.mobile }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button type="submit"
                                        class="btn rounded btn-block btn-dark fa fa-save"></button>
                            </div>
                            <div class="col-3"></div>
                        </form>
                    {% endif %}
                    <!-- Records List Start -->
                    <div class="records--list">
                        <table id="usersRoleList">
                            <thead>
                            <tr>
                                <th>{{ 'general.id.title' | trans }}</th>
                                <th>{{ 'general.name.title' | trans }}</th>
                                <th>{{ 'general.mobile.title' | trans }}</th>
                                <th>{{ 'general.email.title' | trans }}</th>
                                <th>{{ 'general.groups.title' | trans }}</th>
                                <th>{{ 'general.companies.title' | trans }}</th>
                                {% if canRemoveEmployee %}
                                    <th>{{ 'general.action.title' | trans }}</th>
                                {% endif %}
                            </tr>
                            </thead>
                            <tbody>
                            {% for employee in employees %}
                                <tr>
                                    <td>
                                        {{ employee.id }}
                                    </td>
                                    <td>
                                        {{ employee.humanName }} {{ employee.humanFamily }}
                                    </td>
                                    <td>
                                        <a href="tel:{{ employee.mobile }}" class="btn-link"
                                           target="_blank">{{ employee.mobile }}</a>
                                    </td>
                                    <td>
                                        <a href="mailto:{{ employee.email }}"
                                           class="btn-link">{{ employee.email }}</a>
                                    </td>
                                    <td>
                                        {% for group in employee.groups %}
                                            <span class="label label-info rounded">{{ group }}</span>
                                        {% endfor %}
                                    </td>
                                    <td>
                                        {% for company in employee.companies %}
                                            <span class="label label-info rounded">{{ company }}</span>
                                        {% endfor %}
                                    </td>
                                    {% if canRemoveEmployee %}
                                        <td>
                                            <a href="{{ path('repository_company_repository_company_remove_employee', {company_id:company.companyID , employee_id:employee.id}) }}"
                                               class="fa fa-trash"></a>
                                            {#<a href="#" class="fa fa-eye"></a>#}
                                        </td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- Records List End -->
                </div>
            </div>
        </div>
    </div>


    <!--Address Panel-->
    <div class="row">
        <div class="col-12">
            <div class="panel">
                <div class="panel-heading">
                    Address
                </div>

                {% for location in locations %}
                    <div class="panel-content">
                        <form class="row"
                              action="{{ path('repository_company_repository_company_remove_address' , {location_id:location.locationId , company_id:company.companyID}) }}"
                              method="post">
                            <input type="hidden" name="personId">
                            <div class="col-3">
                                <div class="form-group row">
                                    <div class="col-12">
                                        <span class="label-text col-form-label">Province</span>
                                        <h4>{{ location.provinceName }}</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group row">
                                    <div class="col-12">
                                        <span class="label-text col-form-label">City</span>
                                        <h4>{{ location.cityName }}</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group row">
                                    <div class="col-12">
                                        <span class="label-text col-form-label">Districts</span>
                                        <h4>{{ location.districtName }}</h4>
                                    </div>

                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <span class="label-text col-md-12 col-form-label ">Postal Code</span>
                                        <h4>{{ location.postalCode }}</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <span class="label-text col-md-12 col-form-label ">Address</span>
                                        <h4>{{ location.address }}</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-5">
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <span class="label-text col-md-12 col-form-label ">Person</span>
                                        <h4>{{ location.locationContactPersonFirstName }} {{ location.locationContactPersonLastName }}
                                            | {{ location.locationContactPersonMobile }}</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group row">
                                    <span class="label-text col-md-12 col-form-label ">Google Map</span>
                                    <div class="col-md-12">
                                        <img src="https://map.ir/static?width=700&height=400&markers=color:red|{{ location.locationLng }},{{ location.locationLat }}&zoom_level=16"
                                             alt="" width="100%">
                                    </div>
                                </div>
                            </div>
                            {% if canRemoveLocation %}
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-4"></div>
                                        <div class="col-4">
                                            <button type="submit" class="btn btn-block btn-danger rounded"><i
                                                        class="fa fa-trash"></i>
                                            </button>
                                        </div>
                                        <div class="col-4"></div>
                                    </div>
                                </div>
                            {% endif %}

                            <div class="col-12">
                                <div class="form-group row">
                                    {% for message in app.flashes('s') %}
                                        <div class="col-md-12 mt-3 text-green"><span
                                                    class="fa fa-info text-green"></span> {{ message }}</div>
                                    {% endfor %}
                                    {% for message in app.flashes('f') %}
                                        <div class="col-md-12 mt-3 text-red"><span
                                                    class="fa fa-info text-red"></span> {{ message }}</div>
                                    {% endfor %}
                                </div>
                            </div>
                        </form>
                    </div>
                {% endfor %}
                {#add new address#}
                <div class="panel-content">
                    <form class="row"
                          action="{{ path('repository_company_repository_company_edit' , {id:company.companyID}) }}"
                          method="post">
                        <div class="col-3">
                            <div class="form-group row">
                                <div class="col-12">
                                    <span class="label-text col-form-label">Province</span>
                                    <input type="text" list="provinces" name="provinceName"
                                           class="form-control location_province_input"
                                           placeholder="Province"
                                           value="{{ locationModel.provinceName }}">
                                    <datalist id="provinces">
                                        {% for province in provinces %}
                                        <option value="{{ province.provinceName }}">
                                            {% endfor %}
                                    </datalist>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group row">
                                <div class="col-12">
                                    <span class="label-text col-form-label">City</span>
                                    <input type="text" list="cities" name="cityName"
                                           class="form-control location_city_input"
                                           placeholder="City"
                                           value="{{ locationModel.cityName }}">
                                    <datalist id="cities">
                                        <option value="city 1">
                                        <option value="city 1">
                                        <option value="city 1">
                                    </datalist>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group row">
                                <div class="col-12">
                                    <span class="label-text col-form-label">Districts</span>
                                    <input type="search" list="districts" name="districtName"
                                           class="form-control location_district_input"
                                           placeholder="District" value="{{ locationModel.districtName }}">
                                    <datalist id="districts">
                                        <option value="1">
                                        <option value="2">
                                        <option value="3">
                                    </datalist>
                                </div>

                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Postal Code</span>

                                <div class="col-md-12">
                                    <input type="text" name="postalCode"
                                           placeholder="254477788"
                                           class="form-control" value="{{ locationModel.postalCode }}">
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Address</span>
                                <div class="col-md-12">
                                    <input type="text" name="address"
                                           placeholder="Address"
                                           class="form-control" value="{{ locationModel.address }}">
                                </div>
                            </div>
                        </div>
                        <div class="col-5">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Person</span>
                                <div class="col-md-12">
                                    <select name="locationContactPersonId" class="form-control">
                                        {% for person in persons %}
                                            <option value="{{ person.id }}" {{ (person.id == company.companyMainAddressContactPersonID) ? 'selected' : '' }}>
                                                {{ person.humanName }} {{ person.humanFamily }}
                                                | {{ person.mobile }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-7">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Lat & Lng</span>
                                <div class="col-md-12">
                                    <input type="text" name="locationGeoPoints"
                                           placeholder="Example : 35.68128, 51.42254"
                                           class="form-control" value="{{ locationModel.locationGeoPoints }}">
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Google Map</span>
                                <div class="col-md-12">
                                    <div id="map" style="width: 100%;height: 320px;"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-4">
                                    <input type="hidden" name="owner_person"
                                           class="form-control">
                                </div>
                                <div class="col-4">
                                    <button type="submit" class="btn btn-block btn-dark rounded"><i
                                                class="fa fa-save"></i></button>
                                </div>
                                <div class="col-4"></div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group row">
                                {% for message in app.flashes('s') %}
                                    <div class="col-md-12 mt-3 text-green"><span
                                                class="fa fa-info text-green"></span> {{ message }}</div>
                                {% endfor %}
                                {% for message in app.flashes('f') %}
                                    <div class="col-md-12 mt-3 text-red"><span
                                                class="fa fa-info text-red"></span> {{ message }}</div>
                                {% endfor %}
                            </div>
                        </div>
                    </form>
                </div>
                {#add new address#}
            </div>
        </div>
    </div>
    <!--Address Panel-->
{% endblock %}

