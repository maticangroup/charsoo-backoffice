{% extends 'base.html.twig' %}

{% block title %}Order | Create{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-12">
                            <h1>welcome section</h1>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Asperiores eligendi
                                est,
                                exercitationem nihil perspiciatis reprehenderit sit voluptas. Fugiat, placeat,
                                tenetur!
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="panel">
                <div class="panel-content">
                    <form class="row" action="{{ path('sale_order_create') }}" method="post">
                        <div class="col-3">
                            <div class="form-group">
                                <span class="label-text col-md-12 col-form-label ">Order Name</span>
                                <input type="text" name="orderName" class="form-control"
                                       placeholder="Order Name" value="{{ orderModel.orderName }}">
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <span class="label-text col-md-12 col-form-label ">Owner</span>
                                <select name="orderOwnerId" class="form-control">
                                    {% for person in persons %}
                                        <option value="{{ person.id }}" {{ (person.id == orderModel.orderOwnerId) ? 'selected' : '' }}>
                                            {{ person.humanName }} {{ person.humanFamily }}
                                            | {{ person.mobile }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <span class="label-text col-md-12 col-form-label ">Description</span>
                                <textarea type="text" name="orderDescription" class="form-control"
                                          placeholder="Description">{{ orderModel.orderDescription }}</textarea>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="form-group">
                                <button type="submit" class="btn btn-block btn-dark fa fa-save rounded"></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
