{% extends 'base.html.twig' %}

{% block title %}Delivery Method | Create{% endblock %}

{% block body %}
    <div class="row">
        <form class="col-12" action="{{ path('delivery_method_create') }}" method="post">
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-6">
                            <h1>Welcome</h1>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Consequuntur culpa
                                delectus
                                eos, minus nemo neque obcaecati placeat quam quisquam ullam?
                            </p>
                        </div>
                        <div class="col-6">
                            <div class="form-group row">
                                <div class="col-6">
                                    <span class="label-text col-form-label">Delivery Method Name</span>
                                    <input type="text" placeholder="Delivery Name"
                                           value="{{ deliveryMethodModel.deliveryMethodName }}"
                                           name="deliveryMethodName"
                                           class="form-control">
                                </div>
                                <div class="col-6">
                                    <span class="label-text col-form-label">Delivery Method Logo</span>
                                    <label class="custom-file">
                                        <input type="file" value="{{ deliveryMethodModel.deliveryMethodLogoUrl }}"
                                               name="deliveryMethodLogoUrl" class="custom-file-input">
                                        <span class="custom-file-label">Delivery Logo</span>
                                    </label>
                                </div>
                                <div class="col-6">
                                    <span class="label-text col-form-label">Delivery Method Type</span>
                                    <select name="deliveryMethodTypeId" class="form-control">
                                        {% for deliveryMethodType in deliveryMethodTypes %}
                                            <option value="{{ deliveryMethodType.deliveryMethodTypeId }}"
                                                    {{ (deliveryMethodType.deliveryMethodTypeId == deliveryMethodModel.deliveryMethodTypeId) ? 'selected' : '' }}>
                                                {{ deliveryMethodType.deliveryMethodTypeName }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-6">
                                    <span class="label-text col-form-label">Delivery Method Cost</span>
                                    <label class="custom-file">
                                        <input type="text" placeholder="Cost"
                                               value="{{ deliveryMethodModel.deliveryMethodCost }}"
                                               name="deliveryMethodCost"
                                               class="form-control">
                                    </label>
                                </div>
                                <div class="col-4">
                                    <span class="label-text col-form-label">Delivery Method Receive Money</span>
                                    <label class="form-check">
                                        <input type="checkbox" name="deliveryMethodReceiveMoney"
                                               class="form-check-input">
                                        <span class="form-check-label">Can Receive Money?</span>
                                    </label>
                                </div>
                                <div class="col-8">
                                    <span class="label-text col-form-label">Delivery Method Description</span>
                                    <textarea type="text" placeholder="Description" name="deliveryMethodDescription"
                                              class="form-control">{{ deliveryMethodModel.deliveryMethodDescription }}</textarea>
                                </div>
                                <div class="col-12">
                                    <span class="label-text col-form-label">Delivery Method Content</span>
                                    <textarea type="text" placeholder="Description" name="deliveryMethodContent"
                                              class="form-control">{{ deliveryMethodModel.deliveryMethodContent }}</textarea>
                                </div>
                                <div class="col-4"></div>
                                <div class="col-4 mt-4">
                                    <button class="btn btn-dark btn-block rounded fa fa-save"></button>
                                </div>
                                <div class="col-4"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
