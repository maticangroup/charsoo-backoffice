{% extends 'base.html.twig' %}

{% block title %}Coupon Group | Edit{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-6">
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-10">
                            <h1>welcome section</h1>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. A atque eum libero
                                numquam
                                obcaecati perspiciatis quas quisquam soluta unde voluptates.
                            </p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ couponGroupModel.couponGroupSerial }}</h3>
                </div>

                <div class="feeds-panel">
                    <ul class="nav">
                        <li>
                            <span class="time">{{ couponGroupModel.couponGroupLeftUsageTimes }}</span>
                            <i class="fa fa-shopping-cart text-white bg-blue"></i>
                            <span class="text">Left</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-2">
            <div class="panel">
                <div class="weather--panel text-white bg-darker">
                    <div class="weather--title">
                        <i class="fa fa-exclamation"></i>
                        <span>Confirm</span>
                    </div>
                    <div class="weather--info">
                        {% if couponGroupModel.couponGroupStatus.couponGroupStatusMachineName == 'requested' %}
                            <a href="{{ path('accounting_coupon_group_confirm_coupon_group' , {coupon_group_id:couponGroupModel.couponGroupId}) }}"
                               class="fa fa-check text-green"></a>
                        {% elseif couponGroupModel.couponGroupStatus.couponGroupStatusMachineName == 'deactive' %}
                            <a href="{{ path('accounting_coupon_group_confirm_coupon_group' , {coupon_group_id:couponGroupModel.couponGroupId}) }}"
                               class="fa fa-check text-green"></a>
                        {% else %}
                            <a href="{{ path('accounting_coupon_group_reject_coupon_group' , {coupon_group_id:couponGroupModel.couponGroupId}) }}"
                               class="fa fa-ban text-red"></a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Name</span>

                                <div class="col-md-12">
                                    {{ couponGroupModel.couponGroupName }}
                                </div>
                            </div>
                        </div>
                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Prefix</span>
                                <div class="col-md-12">
                                    {{ couponGroupModel.couponGroupPrefix }}
                                </div>
                            </div>
                        </div>
                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Expiry date</span>
                                <div class="col-md-12">
                                    {{ couponGroupModel.couponGroupExpiryDate }}
                                </div>
                            </div>
                        </div>
                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Discount type</span>
                                {{ couponGroupModel.couponGroupDiscountType.couponGroupDiscountTypeName }}
                            </div>
                        </div>

                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Effect</span>

                                <div class="col-md-12">
                                    {{ couponGroupModel.couponGroupDiscountEffect }}
                                </div>
                            </div>
                        </div>

                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Minimum Invoice price</span>

                                <div class="col-md-12">
                                    {{ couponGroupModel.couponGroupMinimumInvoicePrice }}
                                </div>
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="form-group">
                                <span class="label-text col-md-12 col-form-label ">Type</span>
                                {{ (couponGroupModel.couponGroupIsPrivate == 'true') ? 'Private' : 'Public' }}
                            </div>
                        </div>

                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Usage times</span>
                                <div class="col-md-12">
                                    {{ couponGroupModel.couponGroupUsageTimes }}
                                </div>
                            </div>
                        </div>
                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Confirmor</span>
                                <div class="col-md-12">
                                    {{ couponGroupModel.couponGroupConfirmPerson }}
                                </div>
                            </div>
                        </div>
                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Confirm Date</span>
                                <div class="col-md-12">
                                    {{ couponGroupModel.couponGroupConfirmDate }}
                                </div>
                            </div>
                        </div>
                        <div class="col-4 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Description</span>
                                <div class="col-md-12">{{ couponGroupModel.couponGroupUsageDescription }}</div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        {% if couponGroupModel.couponGroupStatus.couponGroupStatusMachineName == 'active' %}
            <div class="col-12">
                <div class="panel">
                    <div class="panel-content">
                        <div class="form-group row">
                            <div class="col-4"></div>
                            <div class="col-md-4">
                                <input type="text" placeholder="Search" name="text"
                                       class="form-control">
                            </div>
                            <div class="col-4"></div>
                        </div>
                        <!-- Records List Start -->
                        <div class="records--list">
                            <table id="usersRoleList">
                                <thead>
                                <tr>
                                    <th scope="col">Owner</th>
                                    <th scope="col">Use Date</th>
                                    <th scope="col">Order</th>
                                    <th scope="col">Order Price</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for usedCoupon in usedPeopleCoupons %}
                                    <tr>
                                        <td>{{ usedCoupon.usedCouponOwnerFirstName }} {{ usedCoupon.usedCouponOwnerLastName }}</td>
                                        <td>{{ usedCoupon.usedCouponDate }}</td>
                                        <td>{{ usedCoupon.usedCouponOrderSerial }}</td>
                                        <td>{{ usedCoupon.usedCouponOrderPrice }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- Records List End -->
                    </div>
                </div>
            </div>
            {% if couponGroupModel.couponGroupIsPrivate == 'true' %}
                <div class="col-12">
                    <div class="panel">
                        <div class="panel-content">
                            <form action="{{ path('accounting_coupon_group_add_person' , {coupon_group_id:couponGroupModel.couponGroupId }) }}"
                                  class="form-group row" method="post">
                                <div class="col-3"></div>
                                <div class="col-md-4">
                                    <select name="id" class="form-control">
                                        {% for person in persons %}
                                            <option value="{{ person.id }}">{{ person.humanName }} {{ person.humanFamily }}
                                                | {{ person.mobile }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn rounded btn-block btn-dark fa fa-save"></button>
                                </div>
                                <div class="col-3"></div>
                            </form>
                            <!---->
                            <div class="records--list">
                                <table id="countriesList">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Mobile</th>
                                        <th>Groups</th>
                                        <th>Company</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for selectedPerson in selectedPersons %}
                                        <tr>
                                            <td>{{ selectedPerson.id }}</td>
                                            <td>{{ selectedPerson.humanName }} {{ selectedPerson.humanFamily }}</td>
                                            <td>{{ selectedPerson.mobile }}</td>
                                            <td>
                                                {% for group in selectedPerson.groups %}
                                                    <span class="label label-info rounded">{{ group }}</span>
                                                {% endfor %}
                                            </td>
                                            <td>
                                                {% for company in selectedPerson.companies %}
                                                    <span class="label label-info rounded">{{ company }}</span>
                                                {% endfor %}
                                            </td>
                                            <td>
                                                <a href="{{ path('accounting_coupon_group_remove_person' , {person_id:selectedPerson.id , coupon_group_id:couponGroupModel.couponGroupId }) }}"
                                                   class="fa fa-trash"></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                            <!-- Records List End -->
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endif %}
    </div>
{% endblock %}
