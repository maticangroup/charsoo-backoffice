{% extends 'base.html.twig' %}

{% block title %}Company | List{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-content">
                    <div class="row">

                        <div class="col-10">
                            <h1>Welcome</h1>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Consequuntur culpa
                                delectus
                                eos, minus nemo neque obcaecati placeat quam quisquam ullam?
                            </p>
                        </div>
                        <div class="col-2 d-flex justify-content-center align-items-center">
                            <a href="{{ path('repository_company_repository_company_create') }}" class="btn btn-block btn-success fa fa-plus rounded"></a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="panel">
                <div class="panel-content">
                    <div class="form-group row">
                        <div class="col-4"></div>
                        <div class="col-md-4">
                            <input type="text" placeholder="Search" name="text"
                                   class="form-control">
                        </div>
                        <div class="col-4"></div>
                    </div>
                    <!-- Records List Start -->
                    <div class="records--list">
                        <table id="usersRoleList">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Company name</th>
                                <th>Telephone</th>
                                <th>Address</th>
                                <th>Contact Person</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for company in companies %}
                                <tr>
                                    <td>{{ company.companyID }}</td>
                                    <td>{{ company.companyName }}</td>
                                    <td>{{ company.companyMainPhone }}</td>
                                    <td>{{ company.companyMainAddress }}</td>
                                    <td>
                                        {#<a href="{{ path('repository_person_repository_person_edit',{id:company.companyMainAddressContactPersonID}) }}"></a>{{ company.companyMainAddressContactPersonName }}#}
                                    </td>
                                    <td>
                                        <a href="{{ path('repository_company_repository_company_edit',{id:company.companyID}) }}"
                                           class=" fa fa-edit"></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- Records List End -->
                </div>
            </div>
        </div>
        <!--Address Panel-->
    </div>
{% endblock %}
