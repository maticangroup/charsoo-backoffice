{% extends 'base.html.twig' %}

{% block title %}SMS Template | Edit{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-10">
                            <h3>Want to add a new user?</h3>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Adipisci aspernatur
                                culpa doloribus laborum necessitatibus rem temporibus. Beatae ipsa officiis
                                quam.
                            </p>
                        </div>
                        <div class="col-2">
                            <a href="#" class="btn btn-block btn-info fa fa-save rounded"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12">
