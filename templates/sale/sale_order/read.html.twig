                            <p><strong>Address : </strong>{{ orderModel.orderOwnerAddress }}</p>
                            <p><strong>Phone : </strong>{{ orderModel.orderOwnerPhone }}</p>
                        </div>

                        <div class="invoice--info">
                            <h5 class="h5"><span>Invoice Serial : {{ orderModel.orderInvoiceSerial }}</span></h5>
                            <p>Invoice Date: <span>{{ orderModel.orderInvoiceCreateDate }}</span></p>
                        </div>
                    </div>

                    <div class="invoice--order">
                        <table class="table">
                            <thead>
                            <tr>
                                <th scope="col">Product Name</th>
                                <th scope="col">Guarantee</th>
                                <th scope="col">Color</th>
                                <th scope="col">Supplier</th>
                                <th scope="col">Serial / Quantity</th>
                                <th scope="col">Current price</th>
                                <th scope="col">Discount price</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for selectedProduct in selectedProducts %}

                                <tr>
                                    <td>{{ selectedProduct.productItemName }}</td>
                                    <td>{{ selectedProduct.productGuaranteeName }}</td>
                                    <td>
                                        {{ selectedProduct.productColorName }}
                                        <span class="label rounded"
                                              style="background-color: {{ selectedProduct.productColorHex }};">  </span>
                                    </td>
                                    <td>{{ selectedProduct.productSupplierName }}</td>
                                    <td>{{ selectedProduct.productSerial }}
                                        / {{ selectedProduct.productQuantity }}</td>
                                    <td>{{ selectedProduct.productNewCurrentPrice }}</td>
                                    <td>{{ selectedProduct.productNewDiscountPrice }}</td>
                                </tr>

                            {% endfor %}

                            <tr>
                                <td colspan="6"><strong>VAT</strong></td>
                                <td>
                                    {% if orderModel.orderVatPrice %}
                                        {{ orderModel.orderVatPrice }}
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <td colspan="6"><strong>Total</strong></td>
                                <td>
                                    {% if orderModel.orderTotalPrice %}
                                        <strong>{{ orderModel.orderTotalPrice }}</strong>
                                    {% endif %}
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="invoice--footer">
                        <ul class="list-unstyled">
                            <li class="mb-3"><strong>Description</strong>
