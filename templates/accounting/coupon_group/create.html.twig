{% extends 'base.html.twig' %}

{% block title %}Coupon Group | Add{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-12">
                            <h1>welcome section</h1>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. A atque eum libero
                                numquam
                                obcaecati perspiciatis quas quisquam soluta unde voluptates.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <form action="" class="col-12" method="post">
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Name</span>

                                <div class="col-md-12">
                                    <input type="text" name="cg_name" placeholder="Coupon Group Name"
                                           class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Prefix</span>

                                <div class="col-md-12">
                                    <input type="text" name="cg_prefix" placeholder="cpn_" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Expiry date</span>
                                <div class="col-md-12">
                                    <input type="date" name="cg_expiry_date" placeholder="" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Discount type</span>
                                <select name="cg_discount_type" class="form-control">
                                    <option value="1">Percentage</option>
                                    <option value="2">Fixed amount</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Effect</span>
                                <div class="col-md-12">
                                    <input type="text" name="cg_effect" placeholder="Percentage or fixed amount"
                                           class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Minimum Invoice price</span>

                                <div class="col-md-12">
                                    <input type="text" name="cg_minimum_invoice_price" placeholder="Invoice Price"
                                           class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="form-group ">
                                <span class="label-text col-md-12 col-form-label ">Type</span>
                                <label class="form-check">
                                    <input type="checkbox" name="checkbox" value="true" class="form-check-input">
                                    <span class="form-check-label">Private</span>
                                </label>
                            </div>
                        </div>

                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Usage times</span>
                                <div class="col-md-12">
                                    <input type="number" name="cg_usage_times" placeholder="" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-6 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Description</span>
                                <div class="col-md-12">
                                    <textarea name="cg_description" placeholder="" class="form-control"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-2 mt-5">
                            <button type="submit" class="btn btn-block btn-dark fa fa-save rounded"></button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
