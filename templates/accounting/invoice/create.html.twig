{% extends 'base.html.twig' %}

{% block title %}Invoice | Create{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-12">
                            <h1>welcome section</h1>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. A atque eum libero
                                numquam
                                obcaecati perspiciatis quas quisquam soluta unde voluptates.
                            </p>

                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-12">
            <div class="panel">
                <div class="panel-content">
                    <form action="{{ path('accounting_invoice_create') }}" class="row" method="post">
                        <div class="col-2">
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <span class="label-text col-md-12 col-form-label ">Date</span>
                                    <input type="date" value="{{ invoiceModel.invoiceCreateDate }}"
                                           name="invoiceCreateDate"
                                           placeholder="Today or any other dates"
                                           class="form-control">
                                </div>
                                <div class="col-md-12">
                                    <span class="label-text col-md-12 col-form-label ">Invoice Group</span>
                                    <input type="text" list="invoiceGroups" name="invoiceGroupName" class="form-control"
                                           placeholder="Invoice Group">
                                    <datalist id="invoiceGroups">
                                        {% for invoiceGroup in invoiceGroups %}
                                        <option value="{{ invoiceGroup }}">
                                            {% endfor %}
                                    </datalist>
                                    </select>
                                </div>
                                <div class="col-md-12 form-inline">
                                    <span class="label-text col-md-12 col-form-label ">Invoice Type</span>
                                    <label class="form-radio mr-3">
                                        <input type="radio" name="invoiceTypeMachineName"
                                               value="income"
                                               class="form-radio-input" {{ (invoiceModel.invoiceTypeMachineName == 'income') ? 'checked' : '' }} >
                                        <span class="form-radio-label"><span
                                                    class="fa fa-arrow-left text-green"></span>Income
                                                         </span>

                                    </label>

                                    <label class="form-radio">
                                        <input type="radio" name="invoiceTypeMachineName"
                                               value="outgo"
                                               class="form-radio-input" {{ (invoiceModel.invoiceTypeMachineName == 'outgo') ? 'checked' : '' }} >
                                        <span class="form-radio-label"><span
                                                    class="fa fa-arrow-right text-red"></span> Outgo</span>
                                    </label>
                                </div>


                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <span class="label-text col-md-12 col-form-label ">From Person</span>
                                    <select name="invoiceFromPersonId" class="form-control">
                                        <option value="none">None</option>
                                        {% for person in persons %}
                                            <option value="{{ person.id }}" {{ (person.id == invoiceModel.invoiceFromPersonId) ? 'selected' : '' }}>{{ person.humanName }} {{ person.humanFamily }}
                                                | {{ person.mobile }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-12">
                                    <span class="label-text col-md-12 col-form-label ">To Person</span>
                                    <select name="invoiceToPersonId" class="form-control">
                                        <option value="none">None</option>
                                        {% for person in persons %}
                                            <option value="{{ person.id }}" {{ (person.id == invoiceModel.invoiceToPersonId) ? 'selected' : '' }}>{{ person.humanName }} {{ person.humanFamily }}
                                                | {{ person.mobile }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <span class="label-text col-md-12 col-form-label ">From Company</span>
                                    <select name="invoiceFromCompanyId" class="form-control">
                                        <option value="none">None</option>
                                        {% for company in companies %}
                                            <option value="{{ company.companyID }}" {{ (company.companyID == invoiceModel.invoiceFromCompanyId) ? 'selected' : '' }}>{{ company.companyName }}</option>
                                        {% endfor %}
                                    </select>
                                </div>


                                <div class="col-md-12">
                                    <span class="label-text col-md-12 col-form-label ">To Company</span>
                                    <select name="invoiceToCompanyId" class="form-control">
                                        <option value="none">None</option>
                                        {% for company in companies %}
                                            <option value="{{ company.companyID }}" {{ (company.companyID == invoiceModel.invoiceToCompanyId) ? 'selected' : '' }}>{{ company.companyName }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col-4">
                            <div class="form-group row">
                                <span class="label-text col-md-12">Description</span>

                                <div class="col-md-12">
                                                    <textarea name="invoiceDescription" class="form-control"
                                                              placeholder="Text input area">{{ invoiceModel.invoiceDescription }}</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-4"></div>
                        <div class="col-2 d-flex flex-column justify-content-center align-items-center">
                            <button type="submit" class="btn btn-block rounded btn-dark fa fa-save"></button>
                        </div>
                        <div class="col-4"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
