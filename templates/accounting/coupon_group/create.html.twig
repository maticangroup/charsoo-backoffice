{% extends 'base.html.twig' %}

{% block title %}Coupon Group | Create{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-12">
                            <h1>welcome section</h1>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. A atque eum libero
                                numquam
                                obcaecati perspiciatis quas quisquam soluta unde voluptates.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <form action="{{ path('accounting_coupon_group_create') }}" class="col-12" method="post">
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Name</span>

                                <div class="col-md-12">
                                    <input type="text" value="{{ couponGroupModel.couponGroupName }}"
                                           placeholder="Coupon Group Name"
                                           class="form-control" name="couponGroupName">
                                </div>
                            </div>
                        </div>
                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Prefix</span>

                                <div class="col-md-12">
                                    <input type="text" value="{{ couponGroupModel.couponGroupPrefix }}"
                                           placeholder="cpn_" class="form-control" name="couponGroupPrefix">
                                </div>
                            </div>
                        </div>
                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Expiry date</span>
                                <div class="col-md-12">
                                    <input type="date" name="couponGroupExpiryDate" placeholder="" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Discount type</span>
                                <select name="couponGroupDiscountType" class="form-control">
                                    <option value="fixed">Fixed</option>
                                    <option value="percentage">Percentage</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Effect</span>
                                <div class="col-md-12">
                                    <input type="text" value="{{ couponGroupModel.couponGroupDiscountEffect }}"
                                           placeholder="Percentage or fixed amount"
                                           class="form-control" name="couponGroupDiscountEffect">
                                </div>
                            </div>
                        </div>
                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Minimum Invoice price</span>

                                <div class="col-md-12">
                                    <input type="text" value="{{ couponGroupModel.couponGroupMinimumInvoicePrice }}"
                                           placeholder="Invoice Price"
                                           class="form-control" name="couponGroupMinimumInvoicePrice">
                                </div>
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="form-group ">
                                <span class="label-text col-md-12 col-form-label ">Type</span>
                                <label class="form-check">
                                    <input type="checkbox" name="couponGroupIsPrivate" value="true" class="form-check-input"
                                           onclick="toggle('.myClass', this)"
                                            {{ (couponGroupModel.couponGroupIsPrivate == 'true') ? 'checked' : '' }}>
                                    <span class="form-check-label">Private</span>
                                </label>
                            </div>
                        </div>

                        <div class="col-2 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label myClass">Usage times</span>
                                <div class="col-md-12">
                                    <input type="number" value="{{ couponGroupModel.couponGroupUsageTimes }}"
                                           placeholder="" class="form-control myClass" name="couponGroupUsageTimes">
                                </div>
                            </div>
                        </div>
                        <div class="col-6 ">
                            <div class="form-group row">
                                <span class="label-text col-md-12 col-form-label ">Description</span>
                                <div class="col-md-12">
                                    <textarea name="couponGroupUsageDescription" placeholder=""
                                              class="form-control">{{ couponGroupModel.couponGroupUsageDescription }}</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-2 mt-5">
                            <button type="submit" class="btn btn-block btn-dark fa fa-save rounded"></button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
