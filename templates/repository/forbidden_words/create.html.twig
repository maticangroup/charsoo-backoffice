{% extends 'base.html.twig' %}

{% block title %}Forbidden Words | Create{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-10">
                            <h3>Want to add a new forbidden word?</h3>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Asperiores facilis,
                                laudantium odit quibusdam quis vel?
                            </p>
                        </div>
                        <div class="col-2">
                            <form class="row"
                                  action="{{ path('repository_forbidden_words_repository_forbidden_words_create') }}"
                                  method="post">
                                <div class="col-12">
                                    <input type="text" name="forbiddenWord" placeholder="Forbidden Word"
                                           value="{{ forbiddenWordModel.forbiddenWord }}"
                                           class="form-control mb-3">
                                    <button type="submit" class="btn btn-block rounded btn-dark fa fa-save"></button>
                                </div>
                            </form>
                        </div>

                    </div>

                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="panel">
                <div class="panel-content">
                    <div class="form-group row">
                        <div class="col-4"></div>
                        <div class="col-md-4">
                            <input type="text" placeholder="Search" name="text"
                                   class="form-control">
                        </div>
                        <div class="col-4"></div>
                    </div>
                    <!-- Records List Start -->
                    <div class="records--list">
                        <table id="usersRoleList">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for forbiddenWord in forbiddenWords %}
                                <tr>
                                    <td>{{ forbiddenWord.id }}</td>
                                    <td>{{ forbiddenWord.forbiddenWord }}</td>
                                    <td>
                                        <a href="{{ path('repository_forbidden_words_repository_forbidden_words_remove' , {id:forbiddenWord.id}) }}"
                                           class="fa fa-trash"></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- Records List End -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
